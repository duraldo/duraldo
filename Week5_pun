##Poem, pun using classes and attributes

class Flower:    #Defining class
  color = 'unknown'

rose = Flower()
rose.color = 'red'

violet = Flower()
violet.color = 'blue'

this_pun_is_for_you = "You ain't dead! So, shine my shoe!" + " " + "- ''That guy from Goodfellas''"

print("Roses are {},".format(rose.color))
print("violets are {},".format(violet.color))
print(this_pun_is_for_you) 

